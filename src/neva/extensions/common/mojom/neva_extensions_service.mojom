module neva.mojom;

import "mojo/public/mojom/base/values.mojom";

interface NevaExtensionsServiceClient {
  OnExtensionTabCreationRequested(uint64 request_id);
  OnExtensionTabCloseRequested(uint64 tab_id);
  OnExtensionTabFocusRequested(uint64 tab_id);
  OnExtensionPopupCreationRequested();
  OnExtensionPopupCloseRequested(uint64 popup_view_id);
  OnExtensionPopupUpdateRequested(uint64 popup_view_id, int32 width, int32 height);
};

interface NevaExtensionsService {
  BindClient(pending_remote<NevaExtensionsServiceClient> client);
  GetExtensionsInfo() => (array<mojo_base.mojom.Value> infos);
  OnExtensionSelected(uint64 tab_id, string extension_id);
  OnExtensionTabCreated(uint64 tab_id);
  OnExtensionTabCreatedWithRequestId(uint64 request_id, uint64 tab_id);
  OnExtensionTabClosed(uint64 tab_id);
  OnExtensionPopupViewCreated(uint64 popup_view_id, uint64 tab_id);
};
